{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-msvc",
      "displayName": "Windows MSVC (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-asan",
      "displayName": "Windows MSVC (AddressSanitizer)",
      "inherits": [
        "windows-msvc"
      ],
      "binaryDir": "${sourceDir}/build/windows-asan",
      "toolchainFile": "${sourceDir}/cmake/toolchains/windows-asan.cmake"
    },
    {
      "name": "linux-clang",
      "displayName": "Linux Clang (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-clang-asan",
      "displayName": "Linux Clang (AddressSanitizer)",
      "inherits": [
        "linux-clang"
      ],
      "binaryDir": "${sourceDir}/build/linux-clang-asan",
      "toolchainFile": "${sourceDir}/cmake/toolchains/linux-clang-asan.cmake"
    }
  ]
}

